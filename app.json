{
  "expo": {
    "name": "Pantry Pal",
    "slug": "pantry-pal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pantrypal",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "AI-powered smart food inventory management app that helps reduce waste and save money",
    "keywords": ["food", "inventory", "AI", "pantry", "expiration", "waste reduction"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pantrypal.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan and identify food items using AI",
        "NSMicrophoneUsageDescription": "This app may use microphone for video recording during food scanning",
        "NSNotificationsUsageDescription": "This app sends notifications to remind you about expiring food items"
      }
    },
    "android": {
      "package": "com.pantrypal.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS",
        "VIBRATE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#22C55E"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router", 
      "expo-font", 
      "expo-web-browser",
      "expo-camera",
      "expo-notifications",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#22C55E"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "privacy": "public"
  }
}
