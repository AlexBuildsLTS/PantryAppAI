{
  "expo": {
    "name": "Pantry Pal",
    "slug": "pantry-pal-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.north.pantrypal",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Pantry Pal uses FaceID to secure your household data."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0A0A0A"
      },
      "package": "com.yourname.pantrypal"
    }
  }
}
