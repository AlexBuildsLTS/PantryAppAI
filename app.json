{
  "expo": {
    "name": "Pantry Pal",
    "slug": "pantryapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pantrypal",
    "userInterfaceStyle": "automatic",
    "description": "AI-powered smart food inventory management app",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pantrypal.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.pantrypal.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#22C55E"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}